<div class="col-md-9">
  <% if notice %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <strong>Save Success!</strong> <%= notice %>
    </div>
  <% end %>
  <div class="panel panel-default">

    <div class="panel-heading">
      <div class="pull-right">
        <div class="btn-group">
          <%= button_tag raw("Mange <span class='caret'></span>"), class:"btn btn-default dropdown-toggle", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Edit', edit_post_path(@post) %></li>
            <li><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </div>
      <h4 class="note-title"><%= @post.title %></h4>

      <div class="note-info">
        <small><strong>Create at:</strong> <%= time_ago_in_words @post.created_at %></small>
      </div>
    </div>

    <div class="panel-body">
      <p>
        <%= @post.body.html_safe %>
      </p>
      <p>
        <% @picture.each do |pic| %>
          <%= image_tag pic.pic_url(:thumb_large), class: "img-rounded", size: "200x120", style: "margin-top: 3.5px;" %>
        <% end %>
      </p>
    </div>
  </div>

</div>
<%= render partial: "menu_list" %>
